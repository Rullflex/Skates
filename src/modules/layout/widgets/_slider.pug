mixin Slider
	-
		const { options, onlyHTML, attrs } = Component(attributes, {
			options: {
				type: String,
				default: '',
			}
			onlyHTML: {
				type: Boolean,
				default: false,
			},
		})

		if (!onlyHTML) attrs['data-uk-slider'] = options

	div&attributes(attrs)
		block 

mixin SliderItems
	-
		const { hasContainer, attrs } = Component(attributes, {
			hasContainer: {
				type: Boolean,
				default: true,
			},
		})

	div(class = hasContainer && 'uk-slider-container')
		ul.uk-slider-items&attributes(attrs)
			block

mixin SliderItem 
	li.slider-item&attributes(attributes)
		.slider-item__content
			block

+Slider 
	+SliderItems 
		+SliderItem
		+SliderItem
		+SliderItem

mixin slider-arrow-nav(totalSlidesCount = String)
	.slider-arrow-nav&attributes(attributes)
		a.slider-arrow-nav__arrow.slider-arrow-nav__arrow--left(href="#" data-uk-slider-item="previous"): +icon('arrow-left')

		.slider-arrow-nav__numbers #[span.slider-arrow-nav__numbers--current 01] / #[span= totalSlidesCount]

		a.slider-arrow-nav__arrow.slider-arrow-nav__arrow--right(href="#" data-uk-slider-item="next"): +icon('arrow-right')


mixin slider-dotnav
	ul.dotnav.uk-slider-nav&attributes(attributes)

mixin slideshow-dotnav
	ul.dotnav.uk-slideshow-nav&attributes(attributes)


mixin slider-slidenav
	ul.slidenav&attributes(attributes)
		li.slidenav__item(data-uk-slider-item="previous")
			a.slidenav__link.slidenav__link--prev(href="#")
				+icon('slider-angle-left').slidenav__icon
		li.slidenav__item(data-uk-slider-item="next")
			a.slidenav__link.slidenav__link--next(href="#")
				+icon('slider-angle-right').slidenav__icon

mixin slideshow-slidenav
	ul.slidenav&attributes(attributes)
		li.slidenav__item(data-uk-slideshow-item="previous")
			a.slidenav__link.slidenav__link--prev(href="#")
				+icon('angle-left').slidenav__icon
		li.slidenav__item(data-uk-slideshow-item="next")
			a.slidenav__link.slidenav__link--next(href="#")
				+icon('angle-right').slidenav__icon



mixin slider-thumbnav(length = Number, imgSrc = `${assets}slider-thumb-img-`)
	ul.thumbnav&attributes(attributes)
		if block 
			block 
		else
			- for (var i = 0; i < length; i++)
				li.thumbnav__item(data-uk-slider-item=i)
					a.thumbnav__link.ibg(href="#")
						+picture(jpg, `${imgSrc}${i + 1}`, 'n')

