mixin tab-switcher({ labelSet = Array, label = String, icons = !Array(), hideLabelMd = Boolean(false), verticalAligmentMD = Boolean(false) } = IProps)
    .tab-switcher__label(class=hideLabelMd && 'd-md-none')= label
    .tab-switcher&attributes(attributes)
        button.tab-switcher__btn-drop.d-md-none(type="button")
            span= labelSet[0]
            +icon('angle-down').tab-switcher__btn-drop-angle

        ul.tab-switcher__tab.tab-switcher__tab-drop.d-md-none
            each item in labelSet
                li: a(href="#")= item

        ul.tab-switcher__tab.d-none.d-md-flex(class=verticalAligmentMD && 'tab-switcher__tab--vertical')
            each item, index in labelSet
                li: a(href="#")
                    if icons 
                        +icon(icons[index])
                    = item

        ul.tab-switcher__content-block.uk-switcher
            block

mixin tab-switcher-item
    li.tab-switcher__content-item&attributes(attributes)
        block
