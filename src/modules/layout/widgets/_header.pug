                            +icon('angle-down').header__map-drop-target-angle
                        .header__map-drop(data-uk-drop="pos: bottom-center; delay-hide: 200;")
                            .header__map-drop-item ул. Ивана Фомина, 6
                            .header__map-drop-item Ленинский пр, 140
                            .header__map-drop-item ул. Тюшина, 11
                            a.header__map-drop-item.header__map-drop-item--city(href="#")
                                +icon('point').header__map-drop-target-pin
                                span Москва
                            a.header__map-drop-item.header__map-drop-item--link(href="#map-section" data-uk-scroll) Перейти к карте

                        .header__map-towns
